<div class="main">
  <div class="form">
    <div class="title">
      New Authority
    </div>
    <%= form_with model: @authority do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.submit "Create", disable_with: 'Createing...' %>
    <% end %>
  </div>
  <% if @error_message %>
    <div class="form_error">
      <%= @error_message %>
    </div>
  <% end %>
  <% @authority.errors.full_messages.each do |message| %>
    <div class="form_error">
      <%= @message %>
    </div>
  <% end %>
</div>