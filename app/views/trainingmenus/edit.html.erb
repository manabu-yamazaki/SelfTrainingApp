<div class="main">
  <div class="form">
    <div class="title">
      Training Menu Edit
    </div>
    <%= form_with model: @trainingmenu do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :training_id, "Trainings" %>
      <% @trainingmenu.trainingdetails.order(order: :desc).each_with_index do |trainingdetail, i| %>
        <%= f.select "training_id[#{i}]", options_from_collection_for_select(@trainings.all, :id, :name, trainingdetail.training_id) %>
      <% end %>
      <%= f.check_box :has_new %>
      <%= f.select :training_id, options_from_collection_for_select(@trainings.all, :id, :name) %>
      <%= f.submit "Update", disable_with: 'Updateing...' %>
    <% end %>
  </div>
  <% if @error_message %>
    <div class="form_error">
      <%= @error_message %>
    </div>
  <% end %>
  <% @trainingmenu.errors.full_messages.each do |message| %>
    <div class="form_error">
      <%= @message %>
    </div>
  <% end %>
</div>